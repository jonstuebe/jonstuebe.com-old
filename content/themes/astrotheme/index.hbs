{{! USER CONFIGURATION OF THIS PAGE IS NOT REQUIRED }}
{{!< default}}

{{#if @blog.cover}}
<div id="cover" class="cover post indexfeature featured">
	<div class="background" style="background-image: url('{{@blog.cover}}');"></div>
	<header class="wrapper">
		{{#if @blog.logo}}<img src="{{@blog.logo}}" class="profileimage" alt="{{@blog.title}}">{{/if}}
		<h1 style="text-align: center; margin: 0; -webkit-font-smoothing: antialiased;">{{@blog.title}}</h1>
		<p style="text-align: center; margin: 0; -webkit-font-smoothing: antialiased;">{{@blog.description}}</p>
	</header>
	<i class="fa fa-chevron-down movedown"></i>
</div>
{{/if}}

<div class="profile">
	{{#if @blog.logo}}<img src="{{@blog.logo}}" class="profileimage" alt="{{@blog.title}}">{{/if}}
	<h4>{{@blog.title}}</h4>
	<p>{{@blog.description}}</p>
	<hr>
</div>

<section class="posts postindex wrapper">

	{{> loop}}

	{{pagination}}

</section>
